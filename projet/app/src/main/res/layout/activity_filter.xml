<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="20dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/textViewFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="100dp"/>

        <TextView
            android:id="@+id/textViewJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textSize="18sp"
            android:layout_marginBottom="1dp"/>

        <EditText
            android:id="@+id/editTextJob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/inputs"
            android:layout_marginBottom="30dp"
            android:hint="developer"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="18sp"
            android:layout_marginBottom="1dp"/>

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/inputs"
            android:layout_marginBottom="30dp"
            android:hint="Montpellier"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/textViewPeriode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periode"
            android:textSize="18sp"
            android:layout_marginBottom="1dp"/>

        <EditText
            android:id="@+id/editTextPeriode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/inputs"
            android:layout_marginBottom="30dp"
            android:hint="Periode"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/textViewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Contact"
            android:textSize="18sp"
            android:layout_marginBottom="1dp"/>

        <Spinner
            android:id="@+id/spinnerNationality"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="30dp"
            android:entries="@array/contract"/>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bluegray"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="15dp"
            android:layout_marginBottom="50dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmitJob">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:text="Submit a job offer"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Company Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextCompanyName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:hint="company name"
                android:inputType="text"
                android:padding="7dp" />

            <TextView
                android:id="@+id/textViewPositionOffered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Position offerd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextJob"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:hint="developer"
                android:inputType="text"
                android:padding="7dp" />

            <TextView
                android:id="@+id/textViewAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Description"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:padding="7dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/textViewStartingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starting Date"
                android:textSize="18sp"
                android:layout_marginBottom="1dp"/>

            <EditText
                android:id="@+id/editTextStartDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="datetime"
                android:background="@drawable/inputs"
                android:layout_marginBottom="30dp"
                android:hint="jj/mm/yyyy"
                android:padding="7dp"
                android:drawableRight="@drawable/baseline_calendar_month_24"/>

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="City"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:hint="Montpellier"
                android:inputType="text"
                android:padding="7dp" />

            <TextView
                android:id="@+id/textViewContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Type of Contact"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerNationality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/spinner_background"
                android:entries="@array/contract" />

            <TextView
                android:id="@+id/textViewSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="Salary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextSalary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/inputs"
                android:ems="10"
                android:hint="$100 per day"
                android:inputType="text"
                android:padding="7dp" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="200dp"
                android:backgroundTint="@color/bluegray"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>